<div class="small-12 stat-panel text-right">
	<p><span><%= @project.pledges.count %></span><br>backers</p>
	<hr>
	<p><span><%= number_to_currency(@project.funded_amount / 100, precision: 0) %></span><br> pledged of <%= number_to_currency(@project.goal / 100, precision: 0) %> goal</p>
	<hr>
	<p><span><%= @project.days_left %></span><br> days left</p>
</div>
<p><h4 class="text-center"><small>This project will only be funded if at least <%= number_to_currency(@project.goal / 100, precision: 0) %> CAD is pledged by <%= @end_date  %>.</small></h4><br></p>

<div class="small-12 owner-panel text-center">
	<h6>Presented by</h6>
	<p><%= image_tag @project.logo %></p>
	<p><%= link_to @project.user.name, @project.user  %></p>
	<div class="owner-link"><a href="#" target="_blank">www.hogtown.ca</a></div>
	<p><a class="btn-social-sm"><i class="fi-social-facebook"></i> Facebook</a> &nbsp; <a class="btn-social-sm"><i class="fi-social-twitter"></i> Twitter</a></p>
</div>


<div class="small-12">

	<!-- Twitter -->
	<div class="reward-container panel">
		<div class="reward-description">
			<strong>Pledge a Tweet!</strong>
			<br><br>
			<strong><i class='fi-torsos'></i><span class="tweet-backers"><%= pluralize(@project.twitter_reward.pledges.count,'backer') %></span></strong>
			<% if current_user %>
				<div class="">
				  <a href="https://twitter.com/intent/tweet?url=http%3A%2F%2Fbrewgarden.ca%2Fprojects%2F<%= @project.id %>&text=<%= @project.twitter_reward.encode_message %>&hashtags=<%= @project.twitter_reward.update_hashtags %>"><i class="fi-social-twitter"></i> test</a>
				</div>
			<% else %>
				<p>Please log in to tweet</p>
			<% end %>
			<div class="reward-selector">
				<h4>Pledge a Tweet!</h4>
			</div>
		</div>
	</div>
	<br>
	<%= render @rewards %>
</div>

<script type="text/javascript">
	window.twttr = (function (d,s,id) {
	  var t, js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return; js=d.createElement(s); js.id=id;
	  js.src="https://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs);
	  return window.twttr || (t = { _e: [], ready: function(f){ t._e.push(f) } });
	}(document, "script", "twitter-wjs"));


	twttr.ready(function (twttr) {
	  // Now bind our custom intent events
	  twttr.events.bind('tweet', function(data) {
	  	$.post("<%= twitter_pledge_path(@project, @twitter_reward) %>")
	  		.done( function(data){
	  			console.log(data)
	  			$('.tweet-backers').text(data);
	  		});
	  });

	});
</script>