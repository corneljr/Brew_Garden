

<div class="small-12 panel bg-white columns text-right">

		<p class='stat-text'><span class='stat-number'><%= @project.pledges.count %></span><br>backers</p>
		<p class='stat-text'><span class='stat-number'><%= number_to_currency(@project.funded_amount / 100, precision: 0) %></span><br> pledged of <%= number_to_currency(@project.goal / 100, precision: 0) %> goal</p>
		<p class='stat-text'><span class='stat-number'><%= @days_left %></span><br> days left </p>
		<p class="text-left">This project will only be funded if at least <%= number_to_currency(@project.goal / 100, precision: 0) %> CAD is pledged by <%= @end_date  %>. </p>
</div>

<div class="small-12 panel project_owner text-center bg-white columns">
		<h4>Project Owner</h4>
		<p><%= image_tag "http://placehold.it/100x100" %></p>
		<p><%= link_to @project.user.name, @project.user  %></p>
</div>

<div class="small-12 panel no-padding bg-white columns stripe-button-el">
	<% @rewards.each do |reward| %>

		<%= form_tag project_reward_charges_path(@project, reward) do %>
		  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
		          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
		          data-description="<%= reward.project.title %>"
		          data-amount="<%= reward.amount %>"></script>
		<% end %>

		<div class='reward-container'>
			<div class="reward-description">
				<p><strong>Pledge <%= number_to_currency(reward.amount / 100, precision: 0) %> or more</strong></p>
				<p><%= reward.pledges.count %> backers</p>
				<p><%= reward.description %></p>
			</div>
			<div class="reward-selector">
				<h4>Select this reward</h4>
			</div>
		</div>
	<% end %>
</div>

<style type="text/css">
	
.no-padding {
	padding: 0;
}

.project_owner {
	background-color: rgba(65,117,5,0.5);
}
</style>
<script type="text/javascript">
		$('.reward-container').on('mouseover', function() {
					$(this).find('h4').addClass('animated tada');
		});

</script>