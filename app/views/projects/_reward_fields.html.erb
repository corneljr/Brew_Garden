<!-- Each reward -->
<div class="small-12 panel">
  <div class="row">
    <div class="small-12">
      <div class="row">
        <div class="small-2 columns">
          <%= f.label :amount, class: 'right inline' %>
        </div>
        <div class="small-10 columns">
          <%= f.number_field :amount, placeholder: 'Reward amount' %>
        </div>
      </div>
      <div class="row">
        <div class="small-2 columns">
          <%= f.label :description, class: 'right inline' %>
        </div>
        <div class="small-10 columns">
          <%= f.text_area :description, placeholder: 'Reward Description' %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 text-right" style="margin: 0 -0.5rem;">
          <%= link_to_remove_association 'remove reward', f, class: "button alert tiny" %>
        </div>
      </div>
    </div>
  </div>
</div>