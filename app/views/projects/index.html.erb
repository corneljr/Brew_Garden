<div class="home-bg">
  <!-- placeholder for video? -->
</div>

<!-- Spacer - need to delete -->
<div class="row">
	<div class="small-12 columns">
		<p><br><br><br></p>
	</div>
</div>

<!-- Page header -->
<div class="row">
	<div class="small-12 columns">
		<h2>Discover Projects</h2>
	</div>
</div>

<div class="row">
	<!-- Left column -->
	<div class="small-12 medium-10 large-10 columns">
		<!-- Search form -->
		<div class="row">
			<div class="small-12 columns">
				<%= form_tag project_search_path, class: 'search', method: 'get' do  %>
				<div class="row collapse">
	        <div class="small-10 columns">
	          <%= text_field_tag :q, nil, placeholder: "Search for..." %>
	        </div>
	        <div class="small-2 columns">
	          <%= submit_tag "search", class: 'button secondary postfix'%>
	        </div>
	      </div>
				<% end %>
			</div>
		</div>
		<!-- Most funded row -->
		<div class="row">
			<div class="small-12 columns">
				<h5><strong>Most Funded</strong><span class='see-all'><%= link_to 'See all', project_category_path('Most Funded') %></span></h5>
				<hr>
			</div>
				<%= render partial: 'project', collection: @most_funded %>
		</div>
		<!-- Newest row -->
		<div class="row">
			<div class="small-12 columns">
				<h5><strong>Recently Launched</strong><span class='see-all'><%= link_to 'See all', project_category_path('Recently Launched') %></span></h5>
				<hr>
			</div>
				<%= render partial: 'project', collection: @newest %>
		</div>
		<!-- Near you row -->
		<div class="row">
			<div class="small-12 columns">
				<div class='location-search'>
					<form class='location-form'>
						<div class='small-10 columns'>
							<%= text_field_tag :q, nil, placeholder: '  search by address or city...', class: 'location-input' %>
						</div>
						<div class='small-2 columns'>
							<input type="submit" class='button postfix'>
						</div>
					</form>
				</div>
				<div class='location-header'>
					<h5><strong>Near <span class='location-title'><%= @location %></span></strong> <%= link_to 'change location?', '#', class: 'change-location' %><span class='see-all'><%= link_to 'See all', "/search?q=#{@location}", class: 'see-all-near' %></span></h5>
				</div>
				<hr>
			</div>
			<div class='near-div'>
				<%= render partial: 'project', collection: @near %>
			</div>
		</div>
	</div>
	<!-- Right column -->
	<div class="show-for-medium-up medium-2 columns">
		<h5><strong>Featured</strong></h5>
		<ul class="side-nav">
			<li><%= link_to 'Staff Picks', project_category_path('Staff Picks') %></li>
			<li><%= link_to 'Most Funded', project_category_path('Most Funded') %></li>
			<li><%= link_to 'Recently Launched', project_category_path('Recently Launched') %></li>
			<li><%= link_to 'Ending Soon', project_category_path('Ending Soon') %></li>
		</ul>

		<h5><strong>Categories</strong></h5>
		<ul class="side-nav">
			<li><%= link_to 'all', project_category_path('all') %></li>
			<li><%= link_to 'Brew Pub', project_category_path('Brew Pubs') %></li>
			<li><%= link_to 'Contract Breweries', project_category_path('Contract Breweries') %></li>
			<li><%= link_to 'Microbreweries', project_category_path('Microbreweries') %></li>
			<li><%= link_to 'Nanobreweries', project_category_path('Nanobreweries') %></li>
		</ul>

	</div>
</div>
