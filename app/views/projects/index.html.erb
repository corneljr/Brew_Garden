<div class='project-index-container'>

	<div class='project-search-container'>
		<h2 class='index-main-header'>Discover Projects</h2>
		<%= form_tag project_search_path, class: 'search', method: 'get' do  %>
			<%= text_field_tag :q, nil, placeholder: 'Search by name..' %>
			<%= submit_tag "submit", class: 'button tiny'%>
		<% end %>
	</div>

	<div class='project-index'>
		<div class='large-10 columns'>
			<div class='most_funded'>
				<h3 class='category-title'>Most Funded</h3>
				<%= render partial: 'project', collection: @most_funded %>
			</div>
			<div>
				<h3 class='category-title'>Newest Campaigns</h3>
				<%= render partial: 'project', collection: @newest %>
			</div>
			<div>
				<h3 class='category-title'>Near Toronto</h3>
				<%= render partial: 'project', collection: @near %>
			</div>
		</div>
	</div>

	<div class='large-2 columns'>
		<div class='category-container'>
		<h4 class='sorting-header'>Categories</h4>
			<%= render 'categories' %>
		</div>
	</div>
</div>


