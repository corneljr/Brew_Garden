<div class="small-12 medium-4 large-4 left columns">
  <div class="project-panel">
    <div class="panel-img">
      <a href="#"><%= image_tag featured.slider_images.first.slider_image.card.url, class: 'project-logo' %></a>
      <p class="text-right"><small>By: <%= featured.user.name  %></small></p>
    </div>
    <div class='panel-text'>
      <h1><%= link_to featured.title, featured %></h1>
      <!-- <p><%= featured.short_blurb %></p> -->
      <p><%= featured.short_blurb %></p>
      <p><br></p>
    </div>
    <div class="row">
      <!-- progress-bar -->
      <div class="small-12 columns">
        <% if ((featured.funded_amount.to_f / featured.goal.to_f) * 100) < 100 %>
         <div class="progress-bar" data-funded="<%= ((featured.funded_amount.to_f / featured.goal.to_f) * 100).round %>"><div></div></div>
        <% else %>
          <div class="progress-bar" data-funded="101"><div></div></div>
        <% end %>
      </div>
      <div class='small-4 text-center columns'>
        <div class='metric'><%= ((featured.end_date - Time.now)/(60 * 60 * 24)).round %></div>
        <div class='metric-sub'>days left</div>
      </div>
      <div class='small-3 text-center columns'>
        <div class='metric'><%= ((featured.funded_amount.to_f / featured.goal.to_f) * 100).round %>%</div>
        <div class='metric-sub'>funded</div>
      </div>
      <div class='small-5 text-center columns'>
        <div class='metric'><%= number_to_currency(featured.funded_amount / 100, precision: 0) %></div>
        <div class='metric-sub'>pledged</div>
      </div>
    </div>
  </div>
</div>