<!-- Spacer - need to delete -->
<div class="row">
  <div class="small-12 columns">
    <p><br><br><br></p>
  </div>
</div>

<!-- Page header -->
<div class="row">
  <div class="small-12 text-center columns">
    <h2>Sign Up</h2>
  </div>
</div>

   <div class="row">
    <div class="small-10 medium-6 large-6 small-centered columns">
    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-torso"></i></span>
      </div>
      <div class="small-10 columns">
        <%= text_field_tag :name, params[:name], placeholder: 'Your name' %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-mail"></i></span>
      </div>
      <div class="small-10 columns">
        <%= text_field_tag :email, params[:email], placeholder: 'Your email' %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-lock"></i></span>
      </div>
      <div class="small-10 columns">
        <%= password_field_tag :password, nil, placeholder: 'Your password' %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-2 columns">
        <span class="prefix"><i class="fi-lock"></i></span>
      </div>
      <div class="small-10 columns">
        <%= password_field_tag :password_confirmation, nil, placeholder: 'Confirm your password' %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-12 text-center columns">
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= label_tag :remember_me %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-12 text-center columns">
        <%= submit_tag "Log in", class: 'button'  %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-12 text-center columns">
        <h6 class="subheader">(Forgot your password? <%= link_to 'click here', new_password_reset_path %>)</h6>
      </div>
    </div>
    <% end %>
    </div>
  </div>
 </div>
</div>
<script type="text/javascript">
      
    $this = $(this); 
    //right now I check that user name is greater then 4. If thats true I change the border color. It would be nice to run a validation on each 'input' event. That's not trival as they say

    $('#user_name').on('focus', function() {
      $this.css({
        "border-color": "red",
        "border-width": "1px",
        "border-style": "solid"
      }).on('input', function(){

        if($this.val().length >= 3) {
             $this.css({
          "border-color": "green",
          "border-width": "3px",
          "border-style": "solid"
          });
        }    
      });
    });  
</script>
