<div class='user-container'>
	<div class='user-info-container'>
		<div class='user-image large-5 columns'>
			<%= image_tag 'http://placehold.it/200x200' %>
		</div>
		<div class='user-info large-5 columns'>
			<%= @user.name %>
			<%= @user.description %>
		</div>
	</div>
	<div class='user-projects-container'>
		<div class='user-project-nav-container'>
			<ul class='user-project-nav'>
				<li class='user-project-nav-item'><%= link_to 'Backed', '#', class: 'user-link' %> (<%= @user.pledges.count %>)</li>
				<% if @user.projects.present? %>
					<li class='user-project-nav-item'><%= link_to 'Created', '#', class: 'user-link' %> (<%= @user.projects.count %>)</li>
				<% end %>
				<% if @user.comments.present? %>
					<li class='user-project-nav-item'><%= link_to 'Comments', '#', class: 'user-link' %> (<%= @user.comments.count %>)</li>
				<% end %>
			</ul>
		</div>
		<div class='user-project-info'>
			<% if @user.pledges.present? %>
				<%= render 'user_pledges' %>
			<% elsif @user.projects.present? %>
				<%= render 'user_projects' %>
			<% elsif @user.comments.present? %>
				<%= render 'user_comments' %>
			<% else %>
				<h4>There is no action to display for this user</h4>
			<% end %>
		</div>
	</div>
</div>