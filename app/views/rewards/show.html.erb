<h3>Thanks for backing the project!</h3>
<h4>Please provide shipping information for your reward!</h4>

<%= form_for [@project, @reward, @pledge] do |f| %>
	<%= f.text_field :address %>
	<%= f.text_field :postal_code %>
	<%= f.text_field :city %>
	<%= f.text_field :province %>
	<%= f.submit 'Finalize backing', class: 'button tiny'%>
<% end %>


