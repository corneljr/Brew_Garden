    <!-- Spacer - need to delete -->
    <div class="row">
      <div class="small-12 columns">
        <p><br><br><br></p>
      </div>
    </div>

    <!-- Page header -->
    <div class="row">
      <div class="small-12 text-center columns">
        <h2>Thanks for backing the project!</h2>
        <h4>Please provide shipping information for your reward!</h4>
      </div>
    </div>

 <div class="row">
    <div class="small-10 medium-6 large-6 small-centered columns">
		<%= form_for [@project, @reward, @pledge] do |f| %>
			<div class="field">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>
			<div class="field">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code %>
      </div>
			<div class="field">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>
			<div class="field">
        <%= f.label :province %>
        <%= f.text_field :province %>
      </div>
			<div class="row collapse">
        <div class="small-12 text-center columns">
          <%= f.submit "Claim Your Reward" , class: 'button'  %>
        </div>
      </div>
		<% end %>
	 </div>
 </div>
