<%# Rails flash messages styled for Zurb Foundation %>
<% flash.each do |name, msg| %>
<div class="row">
  <div class="small-push-2 small-8 medium-push-3 medium-6 large-push-4 large-4 columns" style="position: absolute; z-index: 999; top: 20px;">
  <% if msg.is_a?(String) %>
    <div data-alert class="text-center alert-box round <%= name.to_s == 'notice' ? 'success' : 'alert' %>">
      <%= content_tag :div, msg %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
  </div>
</div>
<% end %>
