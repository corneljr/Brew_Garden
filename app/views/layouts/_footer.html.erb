</div>

<div id="contact" class="reveal-modal medium radius text-center" data-reveal>
  <h2>Contact Us</h2>
  <div class="row">
    <div class="small-10 medium-10 large-10 small-centered columns">
      <%= form_tag({controller: 'welcome', action: 'contact'}, method: :post) do %>
      <div class="row collapse">
        <div class="small-2 columns">
          <span class="prefix"><i class="fi-torso"></i></span>
        </div>
        <div class="small-10 columns">
          <%= text_field :contact, :name, placeholder: 'Your name' %>
        </div>
      </div>
      <div class="row collapse">
        <div class="small-2 columns">
          <span class="prefix"><i class="fi-mail"></i></span>
        </div>
        <div class="small-10 columns">
          <%= text_field :contact, :email, placeholder: 'Your email' %>
        </div>
      </div>
      <div class="row collapse">
        <div class="small-2 columns">
          <span class="prefix"><i class="fi-comment-quotes"></i></span>
        </div>
        <div class="small-10 columns">
          <%= text_area :contact, :message, rows: 5, placeholder: 'Your message' %>
        </div>
      </div>
      <div class="row collapse">
        <div class="small-12 text-center columns">
          <%= submit_tag "Submit", class: 'button'  %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <a class="close-reveal-modal">&#215;</a>
</div>