<div class="row">
  <div class="small-offset-2 medium-offset-2 large-offset-2 small-6 medium-6 large-6 end">
    <h1>Log in</h1> 
    <div class="large-5 offset-1">
     <%= form_tag sessions_path do %>  
      <div class="field">  
        <%= label_tag :email %>  
        <%= text_field_tag :email, params[:email] %>  
      </div>  
      <div class="field">  
        <%= label_tag :password %>  
        <%= password_field_tag :password %>  
      </div>  
      <div class="field">  
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>  
        <%= label_tag :remember_me %>  
      </div>
      <div class="actions"><%= submit_tag "Log in", class: 'button'  %></div> 
      <p><%= link_to 'forgot password?', new_password_reset_path  %></p>
    <% end %> 
    </div>
  </div>
</div>


 
  

    
   